{
  "manifest_version": 3,
  "name": "webtagger",
  "description": "This extension lets you build image collections for tagging directly in the browser via a sidebar and various context menu controls.",
  "version": "1.0.3",
  
  "permissions": [
    "storage",
    "unlimitedStorage",
    "activeTab",
    "sidePanel",
    "contextMenus"
  ],

  "action": {
    "default_popup": "./popup/popup.html"
  },
  
  "icons": {
    "48": "icon-48.png",
    "96": "icon-96.png",
    "128": "icon-128.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./content.js"]
    }
  ],

  "background": {
    "service_worker": "./background.js",
    "type": "module"
  },
  
  "side_panel": {
    "default_path": "./sidepanel.html",
    "type": "module"
  },

  "commands": {
    
    "open-sidepanel": {
      "suggested_key": {
        "default": "Alt+Z",
        "mac": "Alt+Z"
      },
      "description": "Opens the side panel"
    },

    "add-booru-image": {
      "suggested_key": {
        "default": "Alt+Q",
        "mac": "Alt+Q"
      },
      
      "description": "Adds the image to the sidebar from the current tab if you are on an imageboard."
    }
  }
}